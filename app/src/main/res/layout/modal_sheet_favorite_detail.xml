<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/modal_sheet">

    <FrameLayout
        android:id="@+id/standard_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        android:background="@color/black"
        android:backgroundTint="@color/white"
        tools:layout_height="match_parent"
        style="@style/Widget.Material3.BottomSheet">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/modal_guideline1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05" />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/modal_guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="@id/modal_guideline2"
                app:layout_constraintStart_toStartOf="@id/modal_guideline1"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.bottomsheet.BottomSheetDragHandleView
                    android:id="@+id/drag_handle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:id="@+id/item_category">

                    <ImageView
                        android:id="@+id/star_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/icon_star_blue"
                        android:layout_marginStart="18dp"/>

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="내 장소"
                        android:textSize="16sp"
                        android:fontFamily="@font/pretendard_regular"
                        android:textColor="@color/dark_gray"/>


                    <TextView
                        android:id="@+id/bookmarked_number"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_marginEnd="10dp"
                        android:paddingHorizontal="10dp"
                        android:background="@drawable/rounded_rec_gray_edit_text"
                        android:text="5333"
                        android:gravity="center"
                        android:textColor="@color/gray"
                        android:textSize="12sp"
                        android:singleLine="true"
                        android:visibility="gone"/>


                    <!-- 빈 공간을 차지할 View -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/modal_sheet_top_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="18dp">

                    <TextView
                        android:id="@+id/sort_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="등록순"
                        android:textSize="14dp"
                        android:textColor="@color/gray"
                        android:fontFamily="@font/pretendard_semibold"
                        android:paddingVertical="5dp"/>



                    <!-- 빈 공간을 차지할 View -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/delete_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="삭제"
                        android:textSize="14dp"
                        android:textColor="@color/gray"
                        android:fontFamily="@font/pretendard_semibold"
                        android:paddingVertical="5dp"/>


                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"
                    android:layout_marginTop="10dp"/>



                <androidx.recyclerview.widget.RecyclerView
                    android:overScrollMode="never"
                    android:id="@+id/search_list_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:listitem="@layout/favorite_list_building"
                    android:layout_below="@id/modal_sheet_top_container"/>


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>