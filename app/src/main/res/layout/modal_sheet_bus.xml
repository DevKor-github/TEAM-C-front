                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingVertical="5dp"
                android:layout_marginStart="10dp"
                android:text="11:"
                android:textSize="11dp"
                android:textColor="@color/map_main"
                android:fontFamily="@font/pretendard_semibold"
                android:background="@drawable/bus_modal_timetable"
                app:layout_constraintStart_toEndOf="@id/modal_guideline1"
                app:layout_constraintEnd_toStartOf="@id/modal_guideline8"
                app:layout_constraintTop_toBottomOf="@id/bus_modal_timetable_10_hour"/>

            <TextView
                android:id="@+id/bus_modal_timetable_12_hour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingVertical="5dp"
                android:layout_marginStart="10dp"
                android:text="12:"
                android:textSize="11dp"
                android:textColor="@color/map_main"
                android:fontFamily="@font/pretendard_semibold"
                android:background="@drawable/bus_modal_timetable"
                app:layout_constraintStart_toEndOf="@id/modal_guideline1"
                app:layout_constraintEnd_toStartOf="@id/modal_guideline8"
                app:layout_constraintTop_toBottomOf="@id/bus_modal_timetable_11_hour"/>
            <TextView
                android:id="@+id/bus_modal_timetable_13_hour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingVertical="5dp"
                android:layout_marginStart="10dp"
                android:text="13:"
                android:textSize="11dp"
                android:textColor="@color/map_main"
                android:fontFamily="@font/pretendard_semibold"
                android:background="@drawable/bus_modal_timetable"
                app:layout_constraintStart_toEndOf="@id/modal_guideline1"
                app:layout_constraintEnd_toStartOf="@id/modal_guideline8"
                app:layout_constraintTop_toBottomOf="@id/bus_modal_timetable_12_hour"/>

            <TextView
                android:id="@+id/bus_modal_timetable_14_hour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingVertical="5dp"
