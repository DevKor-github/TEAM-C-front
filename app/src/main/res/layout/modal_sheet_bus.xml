                android:paddingVertical="5dp"
                android:layout_marginStart="10dp"
                android:text="9:"
                android:textSize="11dp"
                android:textColor="@color/map_main"
                android:fontFamily="@font/pretendard_semibold"
                android:background="@drawable/bus_modal_timetable"
                app:layout_constraintStart_toEndOf="@id/modal_guideline1"
                app:layout_constraintEnd_toStartOf="@id/modal_guideline8"
                app:layout_constraintTop_toBottomOf="@id/bus_modal_timetable_8_hour"/>

            <TextView
