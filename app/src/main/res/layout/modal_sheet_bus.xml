            </LinearLayout>

            <LinearLayout
                android:id="@+id/bus_modal_timetable_11_minute_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/bus_modal_timetable_2"
                app:layout_constraintStart_toEndOf="@id/bus_modal_timetable_11_hour"
