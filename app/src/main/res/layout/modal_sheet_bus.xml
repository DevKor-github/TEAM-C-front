            <LinearLayout
                android:id="@+id/bus_modal_timetable_8_minute_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/bus_modal_timetable_2"
                app:layout_constraintStart_toEndOf="@id/bus_modal_timetable_8_hour"
                app:layout_constraintEnd_toStartOf="@id/modal_guideline7"
                app:layout_constraintTop_toBottomOf="@id/bus_modal_timetable_header"
                app:layout_constraintBottom_toBottomOf="@id/bus_modal_timetable_8_hour">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/bus_modal_timetable_8_minute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_bus_modal_timetable_minute"
                    android:nestedScrollingEnabled="true"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bus_modal_timetable_9_minute_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/bus_modal_timetable_2"
                app:layout_constraintStart_toEndOf="@id/bus_modal_timetable_9_hour"
                app:layout_constraintEnd_toStartOf="@id/modal_guideline7"
                app:layout_constraintTop_toBottomOf="@id/bus_modal_timetable_8_minute_layout"
                app:layout_constraintBottom_toBottomOf="@id/bus_modal_timetable_9_hour">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/bus_modal_timetable_9_minute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_bus_modal_timetable_minute"
                    android:nestedScrollingEnabled="true"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bus_modal_timetable_10_minute_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/bus_modal_timetable_2"
                app:layout_constraintStart_toEndOf="@id/bus_modal_timetable_10_hour"
                app:layout_constraintEnd_toStartOf="@id/modal_guideline7"
