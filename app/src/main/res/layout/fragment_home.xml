<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_home">

    <FrameLayout
        android:id="@+id/map_layout"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <com.naver.maps.map.MapView
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="-32dp"
            tools:layout_editor_absoluteY="257dp" />
    </FrameLayout>

    <ImageButton
        android:id="@+id/home_more_button"
        android:src="@drawable/home_more_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:translationZ="90dp"
        android:layout_marginTop="39dp"
        android:layout_marginLeft="36dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/search_bar"
        android:src="@drawable/search_bar"
        android:layout_width="270dp"
        android:layout_height="54dp"
        android:layout_margin="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    
    <ImageButton
        android:id="@+id/search_route_button"
        android:src="@drawable/search_route_button"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_margin="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/cafe_button"
                android:src="@drawable/cafe_button"
                android:layout_width="62.6dp"
                android:layout_height="29dp"
                android:layout_marginEnd="5dp"/>

            <ImageButton
                android:id="@+id/cafeteria_button"
                android:src="@drawable/cafeteria_button"
                android:layout_width="62.6dp"
                android:layout_height="29dp"
                android:layout_marginEnd="5dp"/>

            <ImageButton
                android:id="@+id/printer_button"
                android:src="@drawable/printer_button"
                android:layout_width="70dp"
                android:layout_height="29dp"
                android:layout_marginEnd="5dp" />

            <ImageButton
                android:id="@+id/purifier_button"
                android:src="@drawable/purifier_button"
                android:layout_width="70dp"
                android:layout_height="29dp"
                android:layout_marginEnd="5dp" />

            <ImageButton
                android:id="@+id/convenience_store_button"
                android:src="@drawable/convenience_store_button"
                android:layout_width="70dp"
                android:layout_height="29dp"
                android:layout_marginEnd="5dp" />

            <ImageButton
                android:id="@+id/rest_area_button"
                android:src="@drawable/rest_area_button"
                android:layout_width="83dp"
                android:layout_height="29dp"
                android:layout_marginEnd="5dp" />

            <ImageButton
                android:id="@+id/reading_room_button"
                android:src="@drawable/reading_room_button"
                android:layout_width="70dp"
                android:layout_height="29dp"
                android:layout_marginEnd="5dp" />

            <ImageButton
                android:id="@+id/study_room_button"
                android:src="@drawable/study_room_button"
                android:layout_width="80dp"
                android:layout_height="29dp"
                android:layout_marginEnd="5dp" />

            <ImageButton
                android:id="@+id/smoking_area_button"
                android:src="@drawable/smoking_area_button"
                android:layout_width="80dp"
                android:layout_height="29dp"
                android:layout_marginEnd="5dp" />

            <ImageButton
                android:id="@+id/vending_machine_button"
                android:src="@drawable/vending_machine_button"
                android:layout_width="70dp"
                android:layout_height="29dp"
                android:layout_marginEnd="5dp" />

            <ImageButton
                android:id="@+id/sleeping_room_button"
                android:src="@drawable/sleeping_room_button"
                android:layout_width="70dp"
                android:layout_height="29dp"
                android:layout_marginEnd="5dp" />

        </LinearLayout>

    </HorizontalScrollView>

    <ImageButton
        android:id="@+id/pin_onoff_button"
        android:src="@drawable/pin_off_button"
        android:layout_width="28dp"
        android:layout_height="36dp"
        android:layout_marginTop="132dp"
        android:layout_marginRight="24dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include layout="@layout/modal_sheet"
        android:id="@+id/includedLayout"/>

</androidx.constraintlayout.widget.ConstraintLayout>