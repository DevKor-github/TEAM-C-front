<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/search_list_item_border"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/pin_search_item_img"
        android:layout_width="71dp"
        android:layout_height="71dp"
        android:layout_margin="15dp"
        android:background="@drawable/rounded_container_background"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="71dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/facility_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="고려대학교 백주년삼성기념관 D-Lounge"
            android:textSize="14dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/facility_operating_status"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="운영 중"
                android:textSize="10dp"
                android:textStyle="bold"
                android:textColor="@color/red"/>

            <TextView
                android:id="@+id/facility_operating_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00-22:00"
                android:textSize="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/facility_distance_away"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="280m"
                android:textSize="10dp"
                android:textStyle="bold"
                android:textColor="@color/red"/>

            <TextView
                android:id="@+id/facility_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서울 성북구 고려대로22길 6-7"
                android:textSize="10dp"
                android:textColor="@color/gray"/>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>