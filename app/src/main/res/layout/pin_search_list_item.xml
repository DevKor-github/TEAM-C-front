<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/search_list_item_border"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/pin_search_item_img"
        android:layout_width="71dp"
        android:layout_height="71dp"
        android:layout_margin="15dp"
        android:background="@drawable/rounded_container_background"
        android:elevation="8dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="71dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/facility_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="고려대학교 백주년삼성기념관 D-Lounge"
            android:textSize="14dp"
            android:textColor="@color/map_main"
            android:fontFamily="@font/pretendard_semibold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/facility_operating_status"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="운영 중"
                android:textSize="10dp"
                android:fontFamily="@font/pretendard_bold"
                android:textColor="@color/red"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="평일"
                        android:textSize="10dp"
                        android:textColor="@color/dark_gray"
                        android:fontFamily="@font/pretendard_semibold"/>

                    <TextView
                        android:id="@+id/facility_operating_time_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:00-22:00"
                        android:textSize="10dp"
                        android:textColor="@color/dark_gray"
                        android:fontFamily="@font/pretendard_regular"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="토요일"
                        android:textSize="10dp"
                        android:textColor="@color/dark_gray"
                        android:fontFamily="@font/pretendard_semibold"/>

                    <TextView
                        android:id="@+id/facility_operating_time_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:00-18:00"
                        android:textSize="10dp"
                        android:textColor="@color/dark_gray"
                        android:fontFamily="@font/pretendard_regular"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="일요일"
                        android:textSize="10dp"
                        android:textColor="@color/dark_gray"
                        android:fontFamily="@font/pretendard_semibold"/>

                    <TextView
                        android:id="@+id/facility_operating_time_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:00-18:00"
                        android:textSize="10dp"
                        android:textColor="@color/dark_gray"
                        android:fontFamily="@font/pretendard_regular"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>