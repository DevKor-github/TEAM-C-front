<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bright_gray"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/edit_name_guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/edit_name_guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/edit_name_guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/edit_name_header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/bright_gray"
        android:elevation="8dp"
        app:layout_constraintBottom_toTopOf="@id/edit_name_guideline1"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/edit_name_guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <ImageButton
            android:id="@+id/back_to_mypage_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/grey_back_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/edit_name_guideline2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_semibold"
            android:text="닉네임 수정"
            android:textColor="#424242"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/edit_name_header_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/pretendard_regular"
        android:gravity="center"
        android:text="닉네임을 수정해 주세요."
        android:textColor="@color/map_main"
        android:textSize="14dp"
        app:layout_constraintEnd_toStartOf="@id/edit_name_guideline4"
        app:layout_constraintStart_toEndOf="@id/edit_name_guideline3"
        app:layout_constraintTop_toBottomOf="@id/edit_name_header" />

    <EditText
        android:id="@+id/edit_name_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_rec_bright_gray"
        android:elevation="8dp"
        android:fontFamily="@font/pretendard_semibold"
        android:gravity="center"
        android:hint="어흥"
        android:paddingVertical="5dp"
        android:textColor="@color/map_main"
        android:textColorHint="@color/map_sub"
        android:textSize="14dp"
        app:layout_constraintEnd_toStartOf="@id/edit_name_guideline4"
        app:layout_constraintStart_toEndOf="@id/edit_name_guideline3"
        app:layout_constraintTop_toBottomOf="@id/edit_name_header_text" />

    <TextView
        android:id="@+id/edit_name_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_rec_gray"
        android:elevation="8dp"
        android:fontFamily="@font/pretendard_semibold"
        android:gravity="center"
        android:paddingVertical="5dp"
        android:text="확인"
        android:textColor="@color/bright_gray"
        android:textSize="14dp"
        app:layout_constraintEnd_toStartOf="@id/edit_name_guideline4"
        app:layout_constraintStart_toEndOf="@id/edit_name_guideline3"
        app:layout_constraintTop_toBottomOf="@id/edit_name_text" />

    <ImageView
        android:id="@+id/edit_name_complete"
        android:src="@drawable/icon_red_check"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="25dp"
        android:elevation="16dp"
        android:visibility="gone"
        android:background="@drawable/rounded_rec_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>