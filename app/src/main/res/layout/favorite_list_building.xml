<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@drawable/search_list_item_border"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/yellow_tiger_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/building_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="고려대학교 서울캠퍼스애기능생활관"
            android:textSize="15dp"
            android:textColor="@color/map_main"
            android:fontFamily="@font/pretendard_regular"
            android:layout_marginVertical="2dp"/>


        <!-- 빈 공간을 차지할 View -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/building_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="삭제"
            android:textSize="14dp"
            android:textColor="@color/gray"
            android:singleLine="true"
            android:layout_marginEnd="18dp"
            android:fontFamily="@font/pretendard_regular" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="54dp">

        <TextView
            android:id="@+id/building_address"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="서울 성북구 안암로 73-15"
            android:textSize="11dp"
            android:textColor="#B0B0B0"
            android:fontFamily="@font/pretendard_regular"/>


    </LinearLayout>

</LinearLayout>